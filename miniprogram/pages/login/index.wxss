/**
 * 登录页面样式
 */

/* 页面容器 */
.login-page {
  min-height: 100vh;
  height: 100vh;
  background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 50%, #f5f5f5 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

/* 装饰背景圆 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  filter: blur(120rpx);
}

.bg-circle-1 {
  width: 500rpx;
  height: 500rpx;
  background-color: rgba(16, 185, 129, 0.15);
  top: -100rpx;
  right: -150rpx;
}

.bg-circle-2 {
  width: 600rpx;
  height: 600rpx;
  background-color: rgba(20, 184, 166, 0.12);
  bottom: -150rpx;
  left: -200rpx;
}

/* 主内容区 */
.login-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  position: relative;
  z-index: 1;
  box-sizing: border-box;
}

/* Logo 和标题区 */
.login-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-wrapper {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #34d399, #059669);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(5, 150, 105, 0.3);
  transform: rotate(3deg);
}

.app-title {
  font-size: 52rpx;
  font-weight: 700;
  color: #1f2937;
  letter-spacing: 2rpx;
}

.app-subtitle {
  font-size: 26rpx;
  color: #9ca3af;
  margin-top: 16rpx;
  font-weight: 500;
}

/* 登录表单 */
.login-form {
  width: 100%;
  max-width: 650rpx;
}

/* 表单卡片 */
.form-card {
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(229, 231, 235, 0.5);
}

/* 输入组 */
.input-group {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}

.input-icon {
  width: 48rpx;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input-field {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  color: #1f2937;
}

.input-placeholder {
  color: #d1d5db;
}

.input-divider {
  height: 1rpx;
  background-color: #f3f4f6;
  margin-left: 72rpx;
}

/* 获取验证码按钮 */
.code-btn {
  padding: 16rpx 24rpx;
  background-color: #ecfdf5;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #059669;
  white-space: nowrap;
}

.code-btn-disabled {
  background-color: #f3f4f6;
  color: #9ca3af;
}

/* 协议勾选行 */
.agreement-row {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  padding: 0 8rpx;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 8rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  flex-shrink: 0;
}

.checkbox-checked {
  background-color: #059669;
  border-color: #059669;
}

.agreement-text {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
}

.agreement-link {
  color: #059669;
  font-weight: 500;
}

/* 登录按钮 */
.login-btn-wrapper {
  margin-top: 48rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #34d399, #059669);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 700;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 16rpx 40rpx rgba(5, 150, 105, 0.35);
  border: none;
  line-height: 1;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  opacity: 0.95;
}

/* 底部信息 */
.login-footer {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.version-text {
  font-size: 22rpx;
  color: #d1d5db;
}

/* 角色提示（开发阶段） */
.role-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-top: 32rpx;
  padding: 16rpx 24rpx;
  background-color: #f9fafb;
  border-radius: 16rpx;
}

.role-hint-text {
  font-size: 22rpx;
  color: #9ca3af;
}
