/**
 * 表单页面通用样式
 */

.form-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 200rpx;
}

.form-card {
  background-color: #ffffff;
  border-radius: 28rpx;
  padding: 8rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  padding: 28rpx 0;
}

.form-label {
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.form-value-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-value {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
}

.form-placeholder {
  color: #9ca3af;
  font-weight: 400;
}

.form-divider {
  height: 1rpx;
  background-color: #f3f4f6;
}

.quantity-input {
  width: 100%;
  height: 80rpx;
  font-size: 56rpx;
  font-weight: 700;
  color: #059669;
}

.quantity-input::placeholder {
  color: #e5e7eb;
}

.form-tip {
  margin-top: 24rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.04);
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.btn {
  flex: 1;
  height: 96rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn::after {
  border: none;
}

.btn-cancel {
  background-color: #f3f4f6;
  color: #6b7280;
}

.btn-submit {
  background: linear-gradient(135deg, #34d399, #059669);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(5, 150, 105, 0.3);
}

/* 农户选择弹窗 */
.farmer-popup {
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.popup-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
}

.popup-close {
  padding: 8rpx;
}

.popup-search {
  padding: 16rpx 24rpx;
  background-color: #f9fafb;
}

.farmer-list {
  flex: 1;
  max-height: 60vh;
  padding: 0 24rpx;
}

.farmer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 16rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.farmer-item:active {
  background-color: #d1fae5;
}

.farmer-item-info {
  display: flex;
  flex-direction: column;
}

.farmer-item-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.farmer-item-addr {
  font-size: 26rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

