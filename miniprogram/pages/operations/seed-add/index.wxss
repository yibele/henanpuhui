/**
 * 发放种苗页面样式
 */

.seed-add-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 200rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #059669 0%, #10b981 100%);
  padding: 40rpx 32rpx;
  color: #ffffff;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
}

.page-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
  display: block;
}

/* 表单区块 */
.form-section {
  padding: 0 24rpx;
  margin-top: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-indicator {
  width: 8rpx;
  height: 32rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.indicator-green {
  background-color: #059669;
}

.indicator-blue {
  background-color: #2563eb;
}

.indicator-orange {
  background-color: #ea580c;
}

.indicator-purple {
  background-color: #8b5cf6;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

/* 表单卡片 */
.form-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 0 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  padding: 24rpx 0;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.form-label.required::before {
  content: '*';
  color: #dc2626;
  margin-right: 4rpx;
}

.form-divider {
  height: 1rpx;
  background-color: #f3f4f6;
}

.form-value-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.form-input {
  flex: 1;
  font-size: 32rpx;
  color: #1f2937;
}

.form-input::placeholder {
  color: #d1d5db;
}

/* 带单位的输入框 */
.input-with-unit {
  display: flex;
  align-items: center;
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
}

.input-with-unit .form-input {
  background: transparent;
}

.input-unit {
  font-size: 26rpx;
  color: #9ca3af;
  margin-left: 8rpx;
}

/* 自动计算金额显示 */
.auto-calc-value {
  display: flex;
  flex-direction: column;
}

.calc-amount {
  font-size: 40rpx;
  font-weight: 700;
  color: #059669;
}

.calc-formula {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}

.calc-hint {
  font-size: 24rpx;
  color: #d1d5db;
}

/* 农户选择卡片 */
.farmer-select-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.farmer-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.farmer-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
}

.farmer-phone {
  font-size: 26rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

.farmer-acreage-info {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.acreage-label {
  font-size: 24rpx;
  color: #9ca3af;
  margin-right: 8rpx;
}

.acreage-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #2563eb;
  background-color: #dbeafe;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 面积统计卡片 */
.area-stats-card {
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 16rpx;
  border: 1rpx solid #bbf7d0;
}

.area-stats-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.area-stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.area-stat-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.area-stat-value {
  font-size: 32rpx;
  font-weight: 700;
}

.area-stat-value.total {
  color: #1f2937;
}

.area-stat-value.used {
  color: #ea580c;
}

.area-stat-value.remaining {
  color: #059669;
}

.area-stat-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: #bbf7d0;
}

.form-label-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.form-label-row .form-label {
  margin-bottom: 0;
}

.form-hint {
  font-size: 24rpx;
  color: #2563eb;
  font-weight: 500;
}

.farmer-placeholder {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: #9ca3af;
  font-size: 28rpx;
}

.farmer-placeholder t-icon {
  margin-bottom: 12rpx;
}

/* 上限警告 */
.limit-warning {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  background-color: #fef2f2;
  border-radius: 12rpx;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #dc2626;
}

/* 负责人信息 */
.manager-info {
  padding: 20rpx 0;
}

.manager-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.manager-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.manager-tag {
  font-size: 22rpx;
  color: #8b5cf6;
  background-color: #f3e8ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.manager-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

/* 提示信息 */
.tips {
  padding: 24rpx 32rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

.btn {
  flex: 1;
  height: 96rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn::after {
  border: none;
}

.btn-cancel {
  background-color: #f3f4f6;
  color: #6b7280;
}

.btn-submit {
  background: linear-gradient(135deg, #34d399, #059669);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(5, 150, 105, 0.3);
}

.btn-submit.btn-disabled {
  background: #d1d5db;
  box-shadow: none;
}

/* 农户选择弹窗 */
.farmer-popup {
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.popup-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
}

.popup-close {
  padding: 8rpx;
}

/* 搜索栏 */
.popup-search {
  padding: 16rpx 24rpx;
  background-color: #f9fafb;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  margin-left: 12rpx;
  color: #374151;
}

.search-input::placeholder {
  color: #9ca3af;
}

.search-clear {
  padding: 4rpx;
}

/* 农户列表 */
.farmer-list {
  flex: 1;
  max-height: 65vh;
}

.farmer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background-color 0.2s ease;
}

.farmer-item:active {
  background-color: #f0fdf4;
}

.farmer-item.selected {
  background-color: #f0fdf4;
}

.farmer-item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.farmer-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #059669, #10b981);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.farmer-avatar text {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}

.farmer-item-info {
  flex: 1;
}

.farmer-item-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.farmer-item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.grade-badge {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
}

.grade-badge.grade-gold {
  background-color: #fef3c7;
  color: #d97706;
}

.grade-badge.grade-silver {
  background-color: #e5e7eb;
  color: #6b7280;
}

.grade-badge.grade-bronze {
  background-color: #fce7f3;
  color: #db2777;
}

.farmer-item-phone {
  font-size: 26rpx;
  color: #6b7280;
  margin-top: 4rpx;
  display: block;
}

.farmer-item-addr {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 2rpx;
  display: block;
}

.farmer-item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.item-acreage {
  font-size: 24rpx;
  color: #2563eb;
  background-color: #dbeafe;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  color: #9ca3af;
  font-size: 28rpx;
}

.empty-state t-icon {
  margin-bottom: 16rpx;
}
