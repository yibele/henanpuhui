/**
 * 收购详情页面样式
 * Minimalist + Glassmorphism 风格
 */

.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f9ff 0%, #f8fafc 100%);
  padding: 24rpx;
  padding-bottom: 60rpx;
}

/* ====== 加载状态 ====== */
.loading-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}

.empty-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}

/* ====== 农户信息卡片 ====== */
.farmer-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.25);
}

.farmer-main {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.farmer-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
}

.farmer-avatar text {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.farmer-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.farmer-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
}

.farmer-phone {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.amount-wrap {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.amount-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.amount-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
}

/* ====== 卡片通用样式 ====== */
.card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.card-indicator {
  width: 6rpx;
  height: 32rpx;
  border-radius: 3rpx;
}

.card-indicator.blue {
  background: linear-gradient(180deg, #3b82f6, #2563eb);
}

.card-indicator.green {
  background: linear-gradient(180deg, #10b981, #059669);
}

.card-indicator.purple {
  background: linear-gradient(180deg, #8b5cf6, #7c3aed);
}

.card-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

/* ====== 称重信息网格 ====== */
.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
}

.info-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.info-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

/* ====== 计算结果列表 ====== */
.result-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
}

.result-item.highlight {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
}

.result-label {
  font-size: 28rpx;
  color: #6b7280;
}

.result-value-wrap {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.result-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.result-value.blue {
  color: #2563eb;
}

.result-value.green {
  color: #059669;
}

.result-unit {
  font-size: 24rpx;
  color: #9ca3af;
}

.formula {
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
  text-align: center;
}

.formula text {
  font-size: 24rpx;
  color: #6b7280;
  font-family: 'SF Mono', 'Monaco', monospace;
}

/* ====== 记录信息列表 ====== */
.meta-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 8rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.meta-item:last-child {
  border-bottom: none;
}

.meta-label {
  font-size: 28rpx;
  color: #9ca3af;
  flex-shrink: 0;
}

.meta-value {
  font-size: 28rpx;
  color: #374151;
  text-align: right;
  flex: 1;
  margin-left: 24rpx;
}

.meta-value.remark {
  color: #6b7280;
  word-break: break-all;
}

/* ====== 底部安全区 ====== */
.safe-bottom {
  height: 40rpx;
}
