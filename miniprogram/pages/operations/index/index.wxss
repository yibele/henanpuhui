/**
 * 发苗管理页面样式
 */

.seed-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 180rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #059669 0%, #10b981 100%);
  padding: 40rpx 32rpx;
  color: #ffffff;
}

.header-content {
  margin-bottom: 32rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  display: block;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
  display: block;
}

.header-stats {
  display: flex;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  display: block;
}

.stat-value.highlight {
  color: #fcd34d;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
  display: block;
}

.stat-divider {
  width: 1rpx;
  background-color: rgba(255, 255, 255, 0.2);
  margin: 0 8rpx;
}

/* 状态筛选标签 */
.status-tabs {
  display: flex;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  background-color: #ffffff;
}

.status-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
  background-color: #f3f4f6;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #6b7280;
  transition: all 0.2s ease;
}

.status-tab.active {
  background-color: #059669;
  color: #ffffff;
}

.status-tab .tab-count {
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 4rpx;
}

.status-tab.active .tab-count {
  color: #ffffff;
}

/* 农户列表区块 */
.farmer-section {
  padding: 24rpx;
}

.farmer-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.farmer-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  border-left: 6rpx solid #d1d5db;
}

.farmer-card.pending {
  border-left-color: #9ca3af;
}

.farmer-card.inProgress {
  border-left-color: #2563eb;
}

.farmer-card.completed {
  border-left-color: #059669;
}

.farmer-card:active {
  background-color: #fafafa;
}

.farmer-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.farmer-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #059669, #10b981);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.farmer-avatar text {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}

.farmer-info {
  display: flex;
  flex-direction: column;
}

.farmer-name-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.farmer-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.status-tag {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}

.status-pending {
  background-color: #f3f4f6;
  color: #9ca3af;
}

.status-inProgress {
  background-color: #dbeafe;
  color: #2563eb;
}

.status-completed {
  background-color: #dcfce7;
  color: #059669;
}

.farmer-detail {
  font-size: 26rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

.farmer-progress {
  font-size: 24rpx;
  color: #2563eb;
  margin-top: 4rpx;
}

.farmer-right {
  display: flex;
  align-items: center;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #9ca3af;
  font-size: 26rpx;
  gap: 16rpx;
}

/* 记录区块 */
.record-section {
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
}

.section-count {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 记录列表 */
.record-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.record-card:active {
  background-color: #fafafa;
}

.record-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.record-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #059669, #10b981);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.record-avatar text {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}

.record-info {
  display: flex;
  flex-direction: column;
}

.record-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.record-detail {
  font-size: 26rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

.record-date {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}

.record-right {
  text-align: right;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.record-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #059669;
}

.record-manager {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #f3f4f6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #6b7280;
  font-weight: 500;
}

.empty-hint {
  font-size: 26rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

/* 底部添加按钮 */
.add-btn-fixed {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  bottom: calc(180rpx + constant(safe-area-inset-bottom));
  bottom: calc(180rpx + env(safe-area-inset-bottom));
  height: 100rpx;
  background: linear-gradient(135deg, #34d399, #059669);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 32rpx rgba(5, 150, 105, 0.4);
}

.add-btn-fixed:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 底部安全区 */
.safe-bottom {
  height: 100rpx;
}
