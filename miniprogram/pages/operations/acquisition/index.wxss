/**
 * 收购记录页面样式
 * Minimalist + Glassmorphism 风格
 */

.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f9ff 0%, #f8fafc 100%);
  padding-bottom: 180rpx;
}

/* ====== 搜索区 ====== */
.search-wrap {
  padding: 24rpx 24rpx 16rpx;
  background: #ffffff;
}

/* ====== Tab 切换 ====== */
.tab-wrap {
  display: flex;
  gap: 16rpx;
  padding: 0 24rpx 20rpx;
  background: #ffffff;
}

.tab-item {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #6b7280;
  background: #f3f4f6;
  border-radius: 36rpx;
  transition: all 0.2s ease;
}

.tab-item.active {
  color: #ffffff;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

/* ====== 统计卡片 ====== */
.stats-card {
  margin: 24rpx;
  padding: 32rpx 24rpx;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.stats-row {
  display: flex;
  align-items: center;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.stats-item.main .stats-value {
  color: #2563eb;
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background: linear-gradient(180deg, transparent, #e5e7eb, transparent);
}

.stats-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  line-height: 1.2;
}

.stats-unit {
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}

.stats-label {
  font-size: 22rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

/* ====== 列表区域 ====== */
.list-section {
  padding: 0 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 8rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.section-count {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ====== 加载状态 ====== */
.loading-wrap {
  display: flex;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-wrap {
  padding: 80rpx 0;
}

/* ====== 记录卡片 ====== */
.record-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.record-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.02);
}

.record-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

.record-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.record-avatar text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2563eb;
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  min-width: 0;
  flex: 1;
}

.record-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #111827;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.record-meta {
  font-size: 24rpx;
  color: #9ca3af;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.record-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.record-weight {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.weight-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.weight-unit {
  font-size: 22rpx;
  color: #6b7280;
}

.record-amount {
  display: flex;
  align-items: center;
}

.amount-value {
  font-size: 26rpx;
  color: #059669;
  font-weight: 500;
}

/* ====== 加载更多 ====== */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  color: #9ca3af;
  font-size: 26rpx;
}

/* ====== 底部安全区 ====== */
.safe-bottom {
  height: 40rpx;
}

/* ====== 底部新增按钮 ====== */
.fab-wrap {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.fab-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.35);
}

.fab-btn text {
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
}

.fab-btn:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 16rpx rgba(37, 99, 235, 0.3);
}
