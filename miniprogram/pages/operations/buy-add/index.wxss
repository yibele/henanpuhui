@import '../seed-add/index.wxss';

.form-row {
  display: flex;
  gap: 24rpx;
}

.form-item-half {
  flex: 1;
  padding: 28rpx 0;
}

.price-input {
  width: 100%;
  height: 60rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.quantity-input-orange {
  color: #f97316 !important;
}

.total-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #fff7ed;
  border-radius: 20rpx;
  margin: 16rpx 0;
}

.total-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #c2410c;
}

.total-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #ea580c;
}

.btn-orange {
  background: linear-gradient(135deg, #fb923c, #ea580c) !important;
  box-shadow: 0 8rpx 24rpx rgba(249, 115, 22, 0.3) !important;
}

