/* 收购登记页面样式 - TDesign 版本 */

.acquisition-page {
  min-height: 100vh;
  background-color: #f3f4f6;
  padding-bottom: 180rpx;
}

/* ==================== 页面标题 ==================== */

.page-header {
  background: linear-gradient(135deg, #f97316 0%, #fb923c 100%);
  padding: 48rpx 32rpx 40rpx;
  color: #ffffff;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* ==================== 表单区域 ==================== */

.form-section {
  margin-top: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  padding: 0 32rpx 16rpx;
}

.section-indicator {
  width: 8rpx;
  height: 28rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.indicator-orange {
  background-color: #f97316;
}

.indicator-blue {
  background-color: #3b82f6;
}

.indicator-green {
  background-color: #059669;
}

.indicator-purple {
  background-color: #8b5cf6;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

/* ==================== t-cell-group 样式适配 ==================== */

.form-card-group {
  margin: 0 24rpx !important;
}

/* 覆盖 t-cell 默认样式 */
.form-card-group .t-cell {
  --td-cell-left-icon-color: #f97316;
  --td-cell-note-color: #111827;
  --td-cell-required-color: #ef4444;
}

/* ==================== 历史收购汇总 ==================== */

.history-summary {
  margin: 24rpx 24rpx 0;
  background-color: #fef3c7;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #fcd34d;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #92400e;
}

.history-count {
  font-size: 24rpx;
  color: #b45309;
}

.history-stats {
  display: flex;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.history-stats .stat-item {
  flex: 1;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
}

.history-stats .stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #374151;
}

.history-stats .stat-value.highlight {
  color: #059669;
}

.history-stats .stat-label {
  display: block;
  font-size: 22rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

.warehouse-list {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx;
}

.warehouse-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.warehouse-item:last-child {
  border-bottom: none;
}

.warehouse-name {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

.warehouse-data {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #6b7280;
}

.warehouse-data .separator {
  margin: 0 8rpx;
  color: #d1d5db;
}

.warehouse-data .amount {
  color: #059669;
  font-weight: 600;
}

/* ==================== 简化表单行 ==================== */

.form-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 0 24rpx;
  padding: 8rpx 24rpx;
}

.form-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.form-row:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 30rpx;
  color: #374151;
  font-weight: 500;
  flex-shrink: 0;
}

.form-label.required::before {
  content: '*';
  color: #ef4444;
  margin-right: 4rpx;
}

.form-input-wrap {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex: 1;
  margin-left: 40rpx;
}

.form-input {
  flex: 1;
  max-width: 200rpx;
  height: 64rpx;
  font-size: 30rpx;
  color: #111827;
  text-align: right;
  padding: 0 16rpx;
  background-color: #f9fafb;
  border-radius: 8rpx;
  border: 1rpx solid #e5e7eb;
}

.form-unit {
  font-size: 26rpx;
  color: #6b7280;
  margin-left: 12rpx;
  flex-shrink: 0;
  min-width: 60rpx;
}

.form-value-wrap {
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
  flex: 1;
}

.form-value {
  font-size: 32rpx;
  color: #374151;
  font-weight: 600;
}

.form-value.highlight-blue {
  font-size: 36rpx;
  color: #3b82f6;
}

.form-value.highlight-green {
  font-size: 36rpx;
  color: #059669;
}

.formula-row {
  padding: 16rpx 0 8rpx;
  text-align: right;
}

.formula-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 预估收购重量 ==================== */

.estimated-weight-display {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.estimated-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #8b5cf6;
}

.estimated-unit {
  font-size: 26rpx;
  color: #8b5cf6;
  font-weight: 600;
}

.estimated-note {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 净重显示 ==================== */

.net-weight-display {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.net-weight-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #3b82f6;
}

.net-weight-unit {
  font-size: 26rpx;
  color: #3b82f6;
  font-weight: 600;
}

/* ==================== 金额显示 ==================== */

.amount-display {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.amount-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #059669;
}

.amount-unit {
  font-size: 28rpx;
  color: #059669;
  font-weight: 600;
}

.amount-formula {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 备注输入 ==================== */

.form-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 0 24rpx;
  padding: 24rpx;
}

.form-card .t-textarea {
  --td-textarea-background-color: #f9fafb;
  --td-textarea-border-radius: 12rpx;
}

/* ==================== 提示信息 ==================== */

.tips {
  margin: 32rpx 24rpx;
  padding: 24rpx;
  background-color: #fff7ed;
  border-radius: 12rpx;
  border: 2rpx solid #fed7aa;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #9a3412;
}

.tip-item:last-child {
  margin-bottom: 0;
}

/* ==================== 底部按钮 ==================== */

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.bottom-actions .t-button {
  flex: 1;
}

/* ==================== 弹窗样式 ==================== */

.popup-container {
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  flex-shrink: 0;
}

.popup-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.popup-close {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx;
  background-color: #f3f4f6;
}

/* ==================== 搜索栏 ==================== */

.popup-search {
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
  flex-shrink: 0;
}

.popup-search .t-search {
  --td-search-bg-color: #f3f4f6;
}

/* ==================== 列表项 ==================== */

.popup-list {
  flex: 1;
  overflow-y: auto;
  max-height: 60vh;
}

.popup-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background-color 0.2s;
}

.popup-item:active {
  background-color: #f9fafb;
}

.popup-item.selected {
  background-color: #fff7ed;
}

.popup-item-left {
  flex: 1;
  min-width: 0;
}

.popup-item-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.popup-item-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.grade-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.grade-A {
  background-color: #dcfce7;
  color: #15803d;
}

.grade-B {
  background-color: #dbeafe;
  color: #1e40af;
}

.grade-C {
  background-color: #fed7aa;
  color: #9a3412;
}

.popup-item-sub {
  font-size: 26rpx;
  color: #9ca3af;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ==================== 空状态 ==================== */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  gap: 24rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* ==================== 农户信息显示 ==================== */

.farmer-info-slot {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.farmer-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.farmer-phone {
  font-size: 28rpx;
  color: #6b7280;
}

/* ==================== 提示圆点 ==================== */

.tip-dot {
  color: #f97316;
  font-weight: bold;
  margin-right: 8rpx;
}

/* ==================== 农户搜索弹窗 ==================== */

.popup-container {
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  min-height: 50vh;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  flex-shrink: 0;
}

.popup-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.popup-close {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx;
  background-color: #f3f4f6;
}

.search-section {
  padding: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.search-row {
  display: flex;
  align-items: center;
}

.search-row .t-input {
  flex: 1;
  --td-input-bg-color: #f3f4f6;
  --td-input-border-radius: 12rpx;
}

.search-hint {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

.search-result {
  flex: 1;
  padding: 24rpx 32rpx;
}

.result-header {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.result-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f0fdf4;
  border: 2rpx solid #86efac;
  border-radius: 16rpx;
  padding: 24rpx;
}

.result-info {
  flex: 1;
}

.result-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.result-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.result-phone {
  display: block;
  font-size: 28rpx;
  color: #059669;
  margin-bottom: 4rpx;
}

.result-id {
  display: block;
  font-size: 26rpx;
  color: #f97316;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.result-address {
  display: block;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.result-acreage {
  display: block;
  font-size: 26rpx;
  color: #9ca3af;
}

.result-action {
  flex-shrink: 0;
  margin-left: 24rpx;
}

.search-empty {
  padding: 80rpx 32rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* ==================== 等级标签 ==================== */

.grade-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.grade-A, .grade-gold {
  background-color: #fef3c7;
  color: #b45309;
}

.grade-B, .grade-silver {
  background-color: #e5e7eb;
  color: #4b5563;
}

.grade-C, .grade-bronze {
  background-color: #fed7aa;
  color: #9a3412;
}