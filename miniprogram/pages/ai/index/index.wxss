/**
 * AI 智能助手页面样式
 */

.ai-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  position: relative;
}

/* ==================== 聊天区域 ==================== */

.chat-area {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 0;
  box-sizing: border-box;
}

.welcome-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
  margin-bottom: 24rpx;
}

.welcome-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #d1fae5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.welcome-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* ==================== 消息样式 ==================== */

.message-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.message-assistant {
  flex-direction: row;
  justify-content: flex-start;
}

.message-user {
  flex-direction: row-reverse;
  justify-content: flex-start;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-ai {
  background-color: #d1fae5;
  margin-right: 16rpx;
}

.avatar-user {
  background-color: #059669;
  margin-left: 16rpx;
}

.message-bubble {
  max-width: calc(100% - 100rpx);
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  line-height: 1.6;
  word-break: break-all;
  overflow-wrap: break-word;
}

.bubble-assistant {
  background-color: #ffffff;
  color: #1f2937;
  border-top-left-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.bubble-user {
  background: linear-gradient(135deg, #34d399, #059669);
  color: #ffffff;
  border-top-right-radius: 8rpx;
}

.message-content {
  white-space: pre-wrap;
  word-break: break-all;
  overflow-wrap: break-word;
}

.loading-bubble {
  padding: 16rpx 32rpx;
}

.chat-bottom-space {
  height: 380rpx;
}

/* ==================== 快捷建议 ==================== */

.suggestions {
  position: fixed;
  bottom: 320rpx;
  left: 24rpx;
  right: 24rpx;
  z-index: 10;
}

.suggestions-title {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 16rpx;
}

.suggestions-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.suggestion-item {
  background-color: #ffffff;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #059669;
  border: 1rpx solid #d1fae5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.suggestion-item:active {
  background-color: #d1fae5;
}

/* ==================== 输入区域 ==================== */

.input-area {
  background-color: #ffffff;
  padding: 20rpx 24rpx;
  /* 底部需要留出 tabbar 的高度（约 100rpx）+ 安全区域 */
  padding-bottom: calc(120rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f3f4f6;
  flex-shrink: 0;
}

.input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 8rpx 8rpx 8rpx 24rpx;
}

.chat-input {
  flex: 1;
  height: 72rpx;
  font-size: 30rpx;
  color: #1f2937;
}

.send-btn {
  width: 72rpx;
  height: 72rpx;
  background-color: #e5e7eb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  flex-shrink: 0;
}

.send-btn-active {
  background: linear-gradient(135deg, #34d399, #059669);
  box-shadow: 0 4rpx 12rpx rgba(5, 150, 105, 0.3);
}

.send-btn:active {
  transform: scale(0.95);
}

.input-tip {
  text-align: center;
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #d1d5db;
}
