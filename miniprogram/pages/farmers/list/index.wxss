/**
 * 农户列表页面样式
 */

.farmer-list-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 160rpx;
}

/* ==================== 顶部统计卡片 ==================== */

.stats-card {
  background: linear-gradient(135deg, #059669, #10b981);
  margin: 24rpx;
  border-radius: 28rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(5, 150, 105, 0.3);
}

.stats-header {
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

.stats-grid {
  display: flex;
  align-items: center;
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-value {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.stats-value-orange {
  color: #fde68a;
}

.stats-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

/* ==================== 搜索区域 ==================== */

.search-area {
  padding: 0 24rpx 16rpx;
}

.search-row {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.search-wrapper {
  flex: 1;
}

.add-btn {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #34d399, #059669);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(5, 150, 105, 0.35);
  flex-shrink: 0;
}

.add-btn:active {
  transform: scale(0.95);
}

/* ==================== 农户列表 ==================== */

.farmer-list {
  padding: 0 24rpx;
}

.farmer-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.farmer-card:active {
  transform: scale(0.99);
  background-color: #fafafa;
}

.farmer-card-content {
  padding: 24rpx;
}

/* 农户信息 */
.farmer-info {
  display: flex;
  gap: 20rpx;
}

.farmer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* 根据等级显示不同背景色 */
.farmer-avatar-gold {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
}

.farmer-avatar-silver {
  background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
}

.farmer-avatar-bronze {
  background: linear-gradient(135deg, #ffedd5, #fed7aa);
}

.grade-emoji {
  font-size: 36rpx;
}

.farmer-details {
  flex: 1;
  min-width: 0;
}

.farmer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4rpx;
}

.farmer-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

/* 等级标签 */
.grade-tag {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.grade-tag-gold {
  background-color: #fef3c7;
  color: #d97706;
}

.grade-tag-silver {
  background-color: #f3f4f6;
  color: #6b7280;
}

.grade-tag-bronze {
  background-color: #ffedd5;
  color: #ea580c;
}

/* 客户编码 */
.customer-code {
  margin-bottom: 8rpx;
}

.customer-code text {
  font-size: 22rpx;
  color: #8b5cf6;
  font-family: 'SF Mono', monospace;
  background-color: #f3e8ff;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
}

/* 联系信息 */
.farmer-meta {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.meta-item .truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 300rpx;
}

/* 底部信息 */
.farmer-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f4f6;
}

.footer-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.contract-date {
  font-size: 22rpx;
  color: #9ca3af;
}

.footer-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 信息标签 */
.info-chip {
  padding: 6rpx 14rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.info-chip-blue {
  background-color: #dbeafe;
  color: #3b82f6;
}

.info-chip-orange {
  background-color: #ffedd5;
  color: #ea580c;
}

/* ==================== 空状态 ==================== */

.empty-state {
  padding: 100rpx 0;
}

/* ==================== 底部间距 ==================== */

.bottom-space {
  height: 40rpx;
}
