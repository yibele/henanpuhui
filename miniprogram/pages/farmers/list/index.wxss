/**
 * 农户列表页面样式
 * 设计原则：关键信息（亩数、定金）放在显眼位置
 */

.farmer-list-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 160rpx;
}

/* ==================== 顶部统计卡片 ==================== */

.stats-card {
  background: linear-gradient(135deg, #059669, #10b981);
  margin: 24rpx;
  border-radius: 28rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(5, 150, 105, 0.3);
}

.stats-header {
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

.stats-grid {
  display: flex;
  align-items: center;
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-value {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.stats-value-orange {
  color: #fde68a;
}

.stats-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

/* ==================== 搜索区域 ==================== */

.search-area {
  padding: 0 24rpx 16rpx;
}

.search-row {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.search-wrapper {
  flex: 1;
}

.add-btn {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #34d399, #059669);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(5, 150, 105, 0.35);
  flex-shrink: 0;
}

.add-btn:active {
  transform: scale(0.95);
}

/* ==================== 农户列表 ==================== */

.farmer-list {
  padding: 0 24rpx;
}

.farmer-card {
  display: flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.farmer-card:active {
  background-color: #fafafa;
}

/* 左侧等级色条 */
.grade-bar {
  width: 8rpx;
  flex-shrink: 0;
}

.grade-bar-gold {
  background: linear-gradient(180deg, #f59e0b, #d97706);
}

.grade-bar-silver {
  background: linear-gradient(180deg, #9ca3af, #6b7280);
}

.grade-bar-bronze {
  background: linear-gradient(180deg, #f97316, #ea580c);
}

/* 卡片内容 */
.farmer-card-content {
  flex: 1;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 第一行：姓名 | 等级 | 电话 */
.farmer-row-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.farmer-name-area {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.farmer-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.grade-line {
  font-size: 24rpx;
  color: #d1d5db;
}

.grade-text {
  font-size: 24rpx;
  font-weight: 600;
}

.grade-text-gold {
  color: #d97706;
}

.grade-text-silver {
  color: #6b7280;
}

.grade-text-bronze {
  color: #ea580c;
}

.farmer-phone {
  font-size: 26rpx;
  color: #6b7280;
}

/* 第二行：核心数据 - 亩数 + 定金（突出显示） */
.farmer-row-2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
}

.core-data {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.data-item {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.data-label {
  font-size: 24rpx;
  color: #9ca3af;
  margin-right: 4rpx;
}

.data-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #059669;
}

.data-value-orange {
  color: #ea580c;
}

.data-unit {
  font-size: 24rpx;
  color: #6b7280;
}

.data-divider {
  width: 1rpx;
  height: 32rpx;
  background-color: #e5e7eb;
}

/* 第三行：次要信息 */
.farmer-row-3 {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.sub-info {
  font-size: 22rpx;
  color: #9ca3af;
}

.sub-info.code {
  color: #8b5cf6;
  background-color: #f3e8ff;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  font-family: 'SF Mono', monospace;
}

/* ==================== 空状态 ==================== */

.empty-state {
  padding: 100rpx 0;
}

/* ==================== 底部间距 ==================== */

.bottom-space {
  height: 40rpx;
}
