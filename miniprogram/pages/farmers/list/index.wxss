/**
 * 农户列表页面样式
 * 重新设计：左右结构，更符合列表阅读习惯
 */

.farmer-list-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 160rpx;
}

/* ==================== 顶部统计卡片 ==================== */

.stats-card {
  background: linear-gradient(135deg, #059669, #047857);
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(5, 150, 105, 0.2);
}

.stats-header {
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

.stats-grid {
  display: flex;
  align-items: center;
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-value {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.stats-value-orange {
  color: #fcd34d;
}

.stats-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.stats-divider {
  width: 1rpx;
  height: 40rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

/* ==================== 搜索区域 ==================== */

.search-area {
  padding: 0 24rpx 24rpx;
}

.search-row {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 88rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
}

.search-placeholder {
  color: #9ca3af;
}

.add-btn {
  width: 88rpx;
  height: 88rpx;
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.add-btn:active {
  background-color: #f9fafb;
}

/* 发苗状态筛选标签 */
.status-tabs {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
}

.status-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
  background-color: #ffffff;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #6b7280;
  transition: all 0.2s ease;
}

.status-tab.active {
  background-color: #059669;
  color: #ffffff;
}

.status-tab .tab-count {
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 4rpx;
}

.status-tab.active .tab-count {
  color: #ffffff;
}

/* 卡片发苗状态标签 */
.seed-status-tag {
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-left: 4rpx;
}

.status-completed {
  background-color: #dcfce7;
  color: #059669;
}

.status-inprogress {
  background-color: #dbeafe;
  color: #2563eb;
}

.status-pending {
  background-color: #f3f4f6;
  color: #9ca3af;
}

/* ==================== 农户列表卡片 ==================== */

.farmer-list {
  padding: 0 24rpx;
}

.farmer-card {
  display: flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
  overflow: hidden;
  position: relative;
}

.farmer-card:active {
  background-color: #fafafa;
}

/* 左侧竖线 */
.grade-line-mark {
  width: 6rpx;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
}

.grade-mark-gold { background-color: #f59e0b; }
.grade-mark-silver { background-color: #9ca3af; }
.grade-mark-bronze { background-color: #d97706; }

/* 卡片主体 */
.farmer-card-body {
  flex: 1;
  padding: 20rpx 24rpx 20rpx 28rpx;
}

/* 主要信息行 */
.card-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.farmer-left {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
  overflow: hidden;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.farmer-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.grade-tag {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  background-color: #f3f4f6;
  color: #6b7280;
}

.grade-tag-gold { color: #d97706; background-color: #fef3c7; }
.grade-tag-silver { color: #4b5563; background-color: #f3f4f6; }
.grade-tag-bronze { color: #9a3412; background-color: #ffedd5; }

.farmer-address {
  font-size: 24rpx;
  color: #6b7280;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 右侧面积 */
.farmer-right {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.acreage-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #059669;
}

.acreage-unit {
  font-size: 22rpx;
  color: #6b7280;
}

/* 次要信息行 */
.card-sub {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 12rpx;
  border-top: 1rpx solid #f3f4f6;
}

.farmer-phone {
  font-size: 26rpx;
  color: #9ca3af;
  font-family: 'SF Mono', monospace;
}

.farmer-deposit {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 加载状态 ==================== */

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  gap: 16rpx;
  color: #9ca3af;
  font-size: 26rpx;
}

/* ==================== 加载更多 ==================== */

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx 0;
  gap: 12rpx;
  color: #9ca3af;
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 32rpx 0;
  color: #d1d5db;
  font-size: 24rpx;
}

/* ==================== 空状态 ==================== */

.empty-state {
  padding: 100rpx 0;
}

/* ==================== 底部间距 ==================== */

.bottom-space {
  height: 40rpx;
}
