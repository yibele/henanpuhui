/**
 * 农户列表页面样式
 * 重新设计：左右结构，更符合列表阅读习惯
 */

.farmer-list-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 160rpx;
}

/* ==================== 顶部统计卡片 ==================== */

.stats-card {
  background: linear-gradient(135deg, #059669, #047857);
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(5, 150, 105, 0.2);
}

.stats-header {
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

.stats-grid {
  display: flex;
  align-items: center;
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-value {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.stats-value-orange {
  color: #fcd34d;
}

.stats-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.stats-divider {
  width: 1rpx;
  height: 40rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

/* ==================== 搜索区域 ==================== */

.search-area {
  padding: 0 24rpx 24rpx;
}

.search-row {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.search-wrapper {
  flex: 1;
}

.add-btn {
  width: 88rpx;
  height: 88rpx;
  background: #ffffff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.add-btn t-icon {
  color: #059669;
}

.add-btn:active {
  background-color: #f9fafb;
}

/* ==================== 农户列表卡片 ==================== */

.farmer-list {
  padding: 0 24rpx;
}

.farmer-card {
  display: flex;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
  overflow: hidden;
  position: relative;
}

.farmer-card:active {
  background-color: #fafafa;
}

/* 左侧竖线 */
.grade-line-mark {
  width: 8rpx;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
}

.grade-mark-gold { background-color: #f59e0b; }
.grade-mark-silver { background-color: #9ca3af; }
.grade-mark-bronze { background-color: #d97706; }

/* 卡片主体 */
.farmer-card-body {
  flex: 1;
  padding: 24rpx 24rpx 24rpx 32rpx; /* 左侧留出一点空间 */
  display: flex;
  flex-direction: column;
}

/* 顶部区域：左右布局 */
.card-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.farmer-identity {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.farmer-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.grade-tag {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  background-color: #f3f4f6;
  color: #6b7280;
}

.grade-tag-gold { color: #d97706; background-color: #fef3c7; }
.grade-tag-silver { color: #4b5563; background-color: #f3f4f6; }
.grade-tag-bronze { color: #9a3412; background-color: #ffedd5; }

.farmer-phone {
  font-size: 26rpx;
  color: #9ca3af;
  font-family: 'SF Mono', monospace;
}

/* 右侧关键数值 */
.farmer-metrics {
  display: flex;
  gap: 32rpx;
}

.metric-item {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.metric-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1;
}

.metric-money {
  color: #059669;
}

.metric-unit {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 分割线 */
.card-divider {
  height: 1rpx;
  background-color: #f3f4f6;
  margin-bottom: 16rpx;
}

/* 底部区域 */
.card-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-group {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
  overflow: hidden;
}

.info-text {
  font-size: 24rpx;
  color: #6b7280;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.info-text.code {
  color: #4b5563;
  font-weight: 500;
}

.info-dot {
  color: #d1d5db;
  font-size: 20rpx;
}

.date-text {
  font-size: 22rpx;
  color: #9ca3af;
  flex-shrink: 0;
}

/* ==================== 加载状态 ==================== */

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  gap: 16rpx;
  color: #9ca3af;
  font-size: 26rpx;
}

/* ==================== 空状态 ==================== */

.empty-state {
  padding: 100rpx 0;
}

/* ==================== 底部间距 ==================== */

.bottom-space {
  height: 40rpx;
}
