/**
 * 农户详情页面样式
 */

.farmer-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 60rpx;
}

/* ==================== 基本信息卡片 ==================== */

.profile-card {
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 24rpx;
}

.profile-header {
  display: flex;
  gap: 20rpx;
}

.profile-avatar {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.grade-emoji {
  font-size: 48rpx;
}

.profile-info {
  flex: 1;
  min-width: 0;
}

.profile-name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4rpx;
}

.profile-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.grade-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.grade-badge-gold {
  background-color: #fef3c7;
  color: #d97706;
}

.grade-badge-silver {
  background-color: #f3f4f6;
  color: #6b7280;
}

.grade-badge-bronze {
  background-color: #ffedd5;
  color: #ea580c;
}

.profile-code {
  margin-bottom: 8rpx;
}

.code-text {
  font-size: 22rpx;
  color: #8b5cf6;
  font-family: 'SF Mono', monospace;
  background-color: #f3e8ff;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
}

.profile-contact {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #059669;
}

/* 快速信息网格 */
.quick-info-grid {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
}

.quick-info-item {
  flex: 1;
  padding: 16rpx 12rpx;
  border-radius: 16rpx;
  text-align: center;
}

.quick-info-blue { background-color: #dbeafe; }
.quick-info-orange { background-color: #ffedd5; }
.quick-info-purple { background-color: #ede9fe; }

.quick-info-label {
  font-size: 20rpx;
  margin-bottom: 4rpx;
  display: block;
}

.quick-info-blue .quick-info-label { color: #3b82f6; }
.quick-info-orange .quick-info-label { color: #ea580c; }
.quick-info-purple .quick-info-label { color: #8b5cf6; }

.quick-info-value {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 4rpx;
}

.value-num {
  font-size: 32rpx;
  font-weight: 700;
  color: #3b82f6;
}

.quick-info-orange .value-num { color: #ea580c; }

.value-unit {
  font-size: 20rpx;
  color: #3b82f6;
}

.quick-info-orange .value-unit { color: #ea580c; }

.value-date {
  font-size: 22rpx;
  font-weight: 700;
  color: #8b5cf6;
}

/* ==================== 区块标题 ==================== */

.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
  padding-left: 8rpx;
}

/* ==================== 作业操作按钮网格 ==================== */

.action-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.action-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s;
}

.action-card:active {
  transform: scale(0.96);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.action-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #4b5563;
}

.action-card-green { border: 2rpx solid #d1fae5; }
.action-card-green:active { background-color: #d1fae5; }

.action-card-blue { border: 2rpx solid #dbeafe; }
.action-card-blue:active { background-color: #dbeafe; }

.action-card-red { border: 2rpx solid #fee2e2; }
.action-card-red:active { background-color: #fee2e2; }

.action-card-orange { border: 2rpx solid #ffedd5; }
.action-card-orange:active { background-color: #ffedd5; }

.action-card-purple { border: 2rpx solid #ede9fe; }
.action-card-purple:active { background-color: #ede9fe; }

.action-card-teal { border: 2rpx solid #ccfbf1; }
.action-card-teal:active { background-color: #ccfbf1; }

/* ==================== 信息卡片 ==================== */

.info-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.address-detail {
  padding: 20rpx;
}

.address-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.address-full {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  gap: 16rpx;
}

.info-icon {
  flex-shrink: 0;
}

.info-content {
  flex: 1;
  min-width: 0;
}

.info-label {
  font-size: 22rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 2rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
}

.info-divider {
  height: 1rpx;
  background-color: #f3f4f6;
  margin-left: 76rpx;
}

/* ==================== 定金与面积管理 ==================== */

.manage-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.manage-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.manage-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.manage-label {
  font-size: 22rpx;
  color: #9ca3af;
}

.manage-value {
  font-size: 32rpx;
  font-weight: 700;
}

.manage-value-orange { color: #ea580c; }
.manage-value-blue { color: #3b82f6; }

.manage-actions {
  display: flex;
  gap: 12rpx;
}

.manage-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
}

.manage-btn::after { border: none; }

.manage-btn-add { background-color: #d1fae5; }
.manage-btn-reduce { background-color: #fee2e2; }

.manage-btn-text {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 12rpx 20rpx;
  background-color: #dbeafe;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #3b82f6;
  border: none;
}

.manage-btn-text::after { border: none; }

.manage-divider {
  height: 1rpx;
  background-color: #f3f4f6;
  margin: 8rpx 0;
}

/* ==================== 时间线 ==================== */

.timeline {
  position: relative;
  padding-left: 32rpx;
  border-left: 4rpx solid #e5e7eb;
  margin-left: 16rpx;
}

.timeline-item {
  position: relative;
  margin-bottom: 20rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -40rpx;
  top: 0;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 0 0 4rpx currentColor;
}

.timeline-dot-seed { background-color: #059669; color: #d1fae5; }
.timeline-dot-fertilizer { background-color: #3b82f6; color: #dbeafe; }
.timeline-dot-pesticide { background-color: #ef4444; color: #fee2e2; }
.timeline-dot-advance { background-color: #f97316; color: #ffedd5; }
.timeline-dot-purchase { background-color: #8b5cf6; color: #ede9fe; }

.timeline-content {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6rpx;
}

.timeline-date {
  font-size: 22rpx;
  color: #9ca3af;
}

.timeline-tag {
  font-size: 20rpx;
  font-weight: 600;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
}

.timeline-tag-seed { background-color: #d1fae5; color: #059669; }
.timeline-tag-fertilizer { background-color: #dbeafe; color: #3b82f6; }
.timeline-tag-pesticide { background-color: #fee2e2; color: #ef4444; }
.timeline-tag-advance { background-color: #ffedd5; color: #f97316; }
.timeline-tag-purchase { background-color: #ede9fe; color: #8b5cf6; }

.timeline-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 2rpx;
}

.timeline-desc {
  font-size: 24rpx;
  color: #6b7280;
}

/* ==================== 空状态 ==================== */

.empty-records {
  text-align: center;
  padding: 48rpx;
  color: #9ca3af;
  font-size: 26rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 20rpx;
  color: #9ca3af;
  font-size: 28rpx;
}

/* ==================== 弹窗样式 ==================== */

.popup-content {
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.popup-content-tall {
  max-height: 80vh;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  flex-shrink: 0;
}

.popup-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
}

.popup-close {
  padding: 8rpx;
}

.popup-scroll {
  flex: 1;
  overflow: hidden;
}

.popup-form {
  padding: 20rpx 32rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #1f2937;
  background-color: #f9fafb;
  border-radius: 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.form-input::placeholder {
  color: #d1d5db;
}

.picker-value {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #1f2937;
  background-color: #f9fafb;
  border-radius: 16rpx;
  padding: 0 20rpx;
}

.form-value-auto {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #059669;
  background-color: #f0fdf4;
  border-radius: 16rpx;
  padding: 0 20rpx;
}

.popup-footer {
  display: flex;
  gap: 24rpx;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f3f4f6;
  flex-shrink: 0;
}

.popup-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 700;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-btn::after { border: none; }

.popup-btn-cancel {
  background-color: #f3f4f6;
  color: #6b7280;
}

.popup-btn-confirm {
  background: linear-gradient(135deg, #34d399, #059669);
  color: #ffffff;
}

.popup-btn-full {
  background-color: #f3f4f6;
  color: #6b7280;
}

/* ==================== 合同图片 ==================== */

.contract-images {
  padding: 20rpx 32rpx;
}

.contract-image {
  width: 100%;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.empty-contract {
  text-align: center;
  padding: 80rpx;
  color: #9ca3af;
  font-size: 28rpx;
}
