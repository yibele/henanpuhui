/**
 * 农户详情页面样式
 */

.farmer-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 60rpx;
}

/* ==================== 基本信息卡片 ==================== */

.profile-card {
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 24rpx;
}

.profile-header {
  display: flex;
  gap: 24rpx;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  background-color: #d1fae5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.profile-info {
  flex: 1;
  min-width: 0;
}

.profile-name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.profile-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 700;
}

.status-tag-active {
  background-color: #d1fae5;
  color: #059669;
}

.status-tag-pending {
  background-color: #ffedd5;
  color: #ea580c;
}

.status-tag-inactive {
  background-color: #f3f4f6;
  color: #6b7280;
}

.profile-contact,
.profile-address {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

/* 快速信息网格 */
.quick-info-grid {
  display: flex;
  gap: 20rpx;
  margin-top: 28rpx;
}

.quick-info-item {
  flex: 1;
  padding: 24rpx;
  border-radius: 20rpx;
}

.quick-info-blue {
  background-color: #dbeafe;
}

.quick-info-purple {
  background-color: #ede9fe;
}

.quick-info-label {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.quick-info-blue .quick-info-label {
  color: #3b82f6;
}

.quick-info-purple .quick-info-label {
  color: #8b5cf6;
}

.quick-info-value {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.value-num {
  font-size: 40rpx;
  font-weight: 700;
  color: #3b82f6;
}

.value-unit {
  font-size: 24rpx;
  color: #3b82f6;
}

.value-date {
  font-size: 32rpx;
  font-weight: 700;
  color: #8b5cf6;
}

/* ==================== 区块标题 ==================== */

.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

/* ==================== 信息卡片 ==================== */

.info-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.info-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  gap: 20rpx;
}

.info-item-clickable:active {
  background-color: #fafafa;
}

.info-icon {
  flex-shrink: 0;
}

.info-content {
  flex: 1;
  min-width: 0;
}

.info-label {
  font-size: 24rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 4rpx;
}

.info-value {
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
  font-family: 'SF Mono', monospace;
}

.info-value-link {
  font-size: 30rpx;
  font-weight: 500;
  color: #059669;
}

.info-divider {
  height: 1rpx;
  background-color: #f3f4f6;
  margin-left: 84rpx;
}

/* ==================== 操作按钮 ==================== */

.action-section {
  margin-bottom: 24rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  width: 100%;
  height: 96rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn-primary {
  background: linear-gradient(135deg, #34d399, #059669);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(5, 150, 105, 0.3);
}

.action-btn-secondary {
  background-color: #ffffff;
  color: #6b7280;
  border: 2rpx solid #e5e7eb;
}

.action-btn:active {
  transform: scale(0.98);
}

/* ==================== 时间线 ==================== */

.timeline {
  position: relative;
  padding-left: 32rpx;
  border-left: 4rpx solid #e5e7eb;
  margin-left: 16rpx;
}

.timeline-item {
  position: relative;
  margin-bottom: 32rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -40rpx;
  top: 0;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 0 0 4rpx currentColor;
}

.timeline-dot-green {
  background-color: #059669;
  color: #d1fae5;
}

.timeline-dot-orange {
  background-color: #f97316;
  color: #ffedd5;
}

.timeline-content {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.timeline-date {
  font-size: 24rpx;
  color: #9ca3af;
}

.timeline-tag {
  font-size: 22rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.timeline-tag-seed {
  background-color: #d1fae5;
  color: #059669;
}

.timeline-tag-acquisition {
  background-color: #ffedd5;
  color: #ea580c;
}

.timeline-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.timeline-desc {
  font-size: 26rpx;
  color: #6b7280;
}

/* ==================== 空状态 ==================== */

.empty-records {
  text-align: center;
  padding: 48rpx;
  color: #9ca3af;
  font-size: 28rpx;
}

/* ==================== 加载状态 ==================== */

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 20rpx;
  color: #9ca3af;
  font-size: 28rpx;
}

