/**
 * 农户详情页样式
 * 风格：简洁、现代、卡片式
 */

.farmer-detail-page {
  min-height: 100vh;
  background-color: #f3f4f6;
  padding-bottom: 160rpx;
}

/* ==================== 1. 顶部身份卡片 ==================== */

.profile-header {
  background-color: #ffffff;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.profile-main {
  display: flex;
  gap: 24rpx;
}

.avatar-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.avatar-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
}

.grade-bg-gold { background: linear-gradient(135deg, #f59e0b, #d97706); }
.grade-bg-silver { background: linear-gradient(135deg, #9ca3af, #6b7280); }
.grade-bg-bronze { background: linear-gradient(135deg, #f97316, #ea580c); }

.grade-tag {
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.grade-tag-gold { background-color: #fef3c7; color: #d97706; }
.grade-tag-silver { background-color: #f3f4f6; color: #4b5563; }
.grade-tag-bronze { background-color: #ffedd5; color: #9a3412; }

.info-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.name-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.phone-text {
  font-size: 28rpx;
  color: #6b7280;
  font-family: 'SF Mono', monospace;
}

.call-btn {
  padding: 8rpx;
  margin-left: auto;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.meta-divider {
  color: #e5e7eb;
}

.address-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 4rpx;
}

.address-text {
  font-size: 24rpx;
  color: #4b5563;
}

/* ==================== 2. 核心数据指标 ==================== */

.stats-card {
  background-color: #ffffff;
  padding: 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.02);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.stat-green { color: #059669; }
.stat-blue { color: #3b82f6; font-size: 30rpx; } /* 日期字体稍小 */

.stat-label {
  font-size: 22rpx;
  color: #9ca3af;
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background-color: #f3f4f6;
}

/* ==================== 3. 通用区块样式 ==================== */

.section-card {
  background-color: #ffffff;
  margin-bottom: 24rpx;
  padding: 24rpx;
}

.section-header {
  margin-bottom: 24rpx;
  padding-left: 8rpx;
  border-left: 6rpx solid #059669;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-left: 12rpx;
}

/* 操作网格 */
.action-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.action-item {
  width: calc(25% - 18rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.action-icon-bg {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
}

.bg-blue { background-color: #eff6ff; }
.bg-green { background-color: #f0fdf4; }
.bg-orange { background-color: #fff7ed; }
.bg-purple { background-color: #f5f3ff; }
.bg-teal { background-color: #ccfbf1; }
.bg-cyan { background-color: #cffafe; }
.bg-red { background-color: #fef2f2; }

.action-name {
  font-size: 24rpx;
  color: #4b5563;
}

/* ==================== 4. 业务时间轴 ==================== */

.timeline-container {
  padding: 0 12rpx;
}

.timeline-item {
  display: flex;
  margin-bottom: 32rpx;
}

.timeline-line {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  width: 32rpx;
}

.timeline-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #d1d5db;
  flex-shrink: 0;
  border: 4rpx solid #ffffff;
  box-shadow: 0 0 0 2rpx #e5e7eb;
}

.dot-seed { background-color: #0d9488; box-shadow: 0 0 0 2rpx #ccfbf1; }
.dot-fertilizer { background-color: #0891b2; box-shadow: 0 0 0 2rpx #cffafe; }
.dot-advance { background-color: #f59e0b; box-shadow: 0 0 0 2rpx #fef3c7; }
.dot-deposit { background-color: #059669; box-shadow: 0 0 0 2rpx #d1fae5; }
.dot-acreage { background-color: #3b82f6; box-shadow: 0 0 0 2rpx #dbeafe; }
.dot-contract { background-color: #8b5cf6; box-shadow: 0 0 0 2rpx #f5f3ff; }
.dot-pesticide { background-color: #ef4444; box-shadow: 0 0 0 2rpx #fee2e2; }

.timeline-connector {
  flex: 1;
  width: 2rpx;
  background-color: #e5e7eb;
  margin-top: 8rpx;
  min-height: 40rpx;
}

.timeline-item:last-child .timeline-connector {
  display: none;
}

.timeline-content {
  flex: 1;
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
}

.timeline-row-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.record-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.record-date {
  font-size: 22rpx;
  color: #9ca3af;
}

.timeline-row-2 {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.timeline-row-3 {
  text-align: right;
  margin-top: 8rpx;
  border-top: 1rpx dashed #e5e7eb;
  padding-top: 8rpx;
}

.record-amount {
  font-size: 28rpx;
  font-weight: 700;
}

.amount-plus { color: #059669; }
.amount-minus { color: #ef4444; }

/* ==================== 5. 弹窗样式 ==================== */

.popup-container {
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
}

.popup-container-center {
  background-color: #ffffff;
  border-radius: 24rpx;
  width: 640rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.popup-header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.popup-container-center .popup-header-bar {
  padding: 32rpx;
  margin-bottom: 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.popup-body {
  margin-bottom: 32rpx;
}

.popup-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f9fafb;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  color: #4b5563;
}

.popup-highlight {
  font-weight: 700;
  color: #059669;
  font-size: 32rpx;
}

.form-field {
  margin-bottom: 24rpx;
}

.field-label {
  display: block;
  font-size: 26rpx;
  color: #374151;
  margin-bottom: 12rpx;
}

.field-input {
  width: 100%;
  height: 88rpx;
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1f2937;
  box-sizing: border-box;
}

.picker-box {
  width: 100%;
  height: 88rpx;
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1f2937;
  display: flex;
  align-items: center;
}

.tag-group {
  display: flex;
  gap: 16rpx;
}

.tag-item {
  padding: 12rpx 32rpx;
  background-color: #f3f4f6;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #4b5563;
}

.tag-item.active {
  background-color: #059669;
  color: #ffffff;
}

.popup-footer-bar {
  display: flex;
  gap: 24rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
  margin: 0;
}

.btn-cancel {
  background-color: #f3f4f6;
  color: #4b5563;
}

.btn-confirm {
  background-color: #059669;
  color: #ffffff;
}

/* 合同预览 */
.contract-scroll {
  max-height: 800rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.contract-img {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.empty-contract {
  padding: 64rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  color: #9ca3af;
  font-size: 26rpx;
}

.bottom-space {
  height: 40rpx;
}

/* ==================== 6. 加载和空状态 ==================== */

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 24rpx;
  color: #9ca3af;
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 0;
  color: #9ca3af;
  font-size: 26rpx;
}

/* ==================== 7. 追加面积弹窗增强样式 ==================== */

.popup-container-tall {
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.popup-scroll {
  flex: 1;
  max-height: 60vh;
  padding: 0 32rpx;
}

.popup-summary {
  display: flex;
  justify-content: space-around;
  background-color: #f9fafb;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.field-label.required::after {
  content: '*';
  color: #ef4444;
  margin-left: 4rpx;
}

.toggle-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.toggle-switch {
  width: 88rpx;
  height: 48rpx;
  background-color: #e5e7eb;
  border-radius: 24rpx;
  position: relative;
  transition: all 0.3s ease;
}

.toggle-switch.active {
  background-color: #059669;
}

.toggle-dot {
  width: 40rpx;
  height: 40rpx;
  background-color: #ffffff;
  border-radius: 50%;
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.toggle-switch.active .toggle-dot {
  left: 44rpx;
}
