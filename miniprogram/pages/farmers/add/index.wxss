/**
 * 新增农户页面样式（签约农户）
 */

.add-farmer-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 48rpx;
}

/* ==================== 表单区块 ==================== */

.form-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.section-indicator {
  width: 8rpx;
  height: 32rpx;
  border-radius: 4rpx;
}

.section-indicator-green {
  background-color: #059669;
}

.section-indicator-blue {
  background-color: #3b82f6;
}

.section-indicator-orange {
  background-color: #f97316;
}

.section-indicator-purple {
  background-color: #8b5cf6;
}

.section-indicator-teal {
  background-color: #14b8a6;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
}

/* ==================== 表单卡片 ==================== */

.form-card {
  background-color: #ffffff;
  border-radius: 28rpx;
  padding: 8rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  padding: 20rpx 0;
}

.form-label {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.form-label.required::after {
  content: ' *';
  color: #ef4444;
}

.form-input {
  width: 100%;
  height: 72rpx;
  font-size: 32rpx;
  color: #1f2937;
  background-color: #f9fafb;
  border-radius: 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.form-input::placeholder {
  color: #d1d5db;
}

.form-divider {
  height: 1rpx;
  background-color: #f3f4f6;
}

/* ==================== Stepper + Input 组合 ==================== */

.stepper-input-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stepper-input {
  flex: 1;
  height: 80rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  background-color: #f9fafb;
  border-radius: 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: center;
}

.stepper-input::placeholder {
  color: #d1d5db;
  font-weight: 400;
}

.deposit-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f9fafb;
  border-radius: 16rpx;
  padding: 0 20rpx;
  height: 80rpx;
}

.deposit-prefix {
  font-size: 32rpx;
  font-weight: 700;
  color: #ea580c;
  margin-right: 8rpx;
}

.deposit-input {
  flex: 1;
  height: 80rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #ea580c;
  background-color: transparent;
  padding: 0;
  text-align: left;
}

.stepper-controls {
  display: flex;
  gap: 8rpx;
}

.stepper-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.15s;
}

.stepper-btn:active {
  transform: scale(0.92);
}

.stepper-btn-minus {
  background-color: #f3f4f6;
}

.stepper-btn-plus {
  background-color: #d1fae5;
}

/* ==================== 地址网格 ==================== */

.address-grid-three {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 24rpx;
  padding: 16rpx 0;
}

.address-item {
  /* 单个地址输入项 */
}

/* ==================== 等级标签 ==================== */

.grade-tags {
  display: flex;
  gap: 16rpx;
  margin-top: 8rpx;
}

.grade-tag {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  opacity: 0.5;
  transition: all 0.2s;
}

.grade-tag:active {
  transform: scale(0.96);
}

.grade-tag.active {
  opacity: 1;
  transform: scale(1.02);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.grade-tag-gold {
  background-color: #fef3c7;
  color: #d97706;
  border: 2rpx solid #fbbf24;
}

.grade-tag-gold.active {
  background-color: #fde68a;
  border-color: #f59e0b;
}

.grade-tag-silver {
  background-color: #f3f4f6;
  color: #6b7280;
  border: 2rpx solid #9ca3af;
}

.grade-tag-silver.active {
  background-color: #e5e7eb;
  border-color: #6b7280;
}

.grade-tag-bronze {
  background-color: #ffedd5;
  color: #ea580c;
  border: 2rpx solid #fb923c;
}

.grade-tag-bronze.active {
  background-color: #fed7aa;
  border-color: #ea580c;
}

/* ==================== 负责人信息 ==================== */

.manager-info {
  padding: 20rpx 0;
}

.manager-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.manager-label {
  font-size: 24rpx;
  color: #6b7280;
}

.manager-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.manager-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
}

.manager-tag {
  font-size: 20rpx;
  color: #8b5cf6;
  background-color: #f3e8ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.manager-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: #9ca3af;
}

/* ==================== 客户编码预览 ==================== */

.code-preview {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.code-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.code-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #8b5cf6;
  font-family: 'SF Mono', 'Monaco', monospace;
  letter-spacing: 2rpx;
}

/* ==================== 应收款只读显示 ==================== */

.readonly-value-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  height: 80rpx;
  background-color: #f9fafb;
  border-radius: 16rpx;
  padding: 0 20rpx;
}

.readonly-prefix {
  font-size: 32rpx;
  font-weight: 700;
  color: #3b82f6;
  margin-right: 4rpx;
}

.readonly-value {
  flex: 1;
  font-size: 36rpx;
  font-weight: 700;
  color: #3b82f6;
}

.readonly-value-red {
  color: #ef4444;
}

.auto-calc-tag {
  font-size: 20rpx;
  color: #3b82f6;
  background-color: #dbeafe;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

/* ==================== 提示信息 ==================== */

.tips {
  padding: 0 16rpx;
  margin-bottom: 32rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 底部按钮 ==================== */

.bottom-actions {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 0;
  margin-top: 16rpx;
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.btn {
  flex: 1;
  height: 96rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn::after {
  border: none;
}

.btn-cancel {
  background-color: #ffffff;
  color: #6b7280;
  border: 2rpx solid #e5e7eb;
}

.btn-submit {
  background: linear-gradient(135deg, #34d399, #059669);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(5, 150, 105, 0.3);
}

.btn:active {
  transform: scale(0.98);
}
