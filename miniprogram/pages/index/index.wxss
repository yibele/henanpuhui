/**
 * 首页 Dashboard 样式
 */

/* 页面容器 */
.dashboard-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

/* ==================== 欢迎横幅 ==================== */

.welcome-banner {
  background: linear-gradient(135deg, #059669 0%, #0d9488 100%);
  border-radius: 40rpx;
  padding: 40rpx;
  color: #ffffff;
  box-shadow: 0 16rpx 40rpx rgba(5, 150, 105, 0.3);
  margin-bottom: 32rpx;
}

.banner-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.banner-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.banner-title {
  font-size: 44rpx;
  font-weight: 700;
}

.banner-right {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.banner-stats {
  display: flex;
  margin-top: 48rpx;
  gap: 48rpx;
}

.banner-stat-item {
  flex: 1;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.75);
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 700;
}

.banner-stat-divider {
  width: 1rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

/* ==================== 区块通用样式 ==================== */

.section {
  margin-bottom: 32rpx;
}

.section-header {
  margin-bottom: 20rpx;
  padding-left: 8rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
}

/* ==================== 快捷操作 ==================== */

.quick-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.quick-action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 16rpx;
  background-color: #ffffff;
  border-radius: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(243, 244, 246, 0.8);
}

.quick-action-item:active {
  transform: scale(0.98);
  background-color: #fafafa;
}

.action-icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.action-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #4b5563;
}

/* ==================== 卡片样式 ==================== */

.card {
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(243, 244, 246, 0.8);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 28rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.card-subtitle {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 6rpx;
}

/* ==================== 图表区域 ==================== */

.chart-container {
  padding-top: 16rpx;
}

.chart-bars {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 200rpx;
  padding: 0 8rpx;
}

.chart-bar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.bar-wrapper {
  display: flex;
  gap: 6rpx;
  align-items: flex-end;
  height: 160rpx;
}

.bar {
  width: 24rpx;
  border-radius: 12rpx 12rpx 4rpx 4rpx;
  min-height: 8rpx;
  transition: height 0.3s ease;
}

.bar-acquisition {
  background: linear-gradient(180deg, #34d399, #059669);
}

.bar-distribution {
  background: linear-gradient(180deg, #fbbf24, #f97316);
}

.bar-label {
  font-size: 20rpx;
  color: #9ca3af;
  margin-top: 12rpx;
}

.chart-legend {
  display: flex;
  justify-content: center;
  gap: 48rpx;
  margin-top: 28rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f3f4f6;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.legend-dot-green {
  background-color: #059669;
}

.legend-dot-orange {
  background-color: #f97316;
}

.legend-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* ==================== 统计卡片 ==================== */

.stats-card {
  padding: 0;
  overflow: hidden;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.stats-update {
  font-size: 24rpx;
  color: #9ca3af;
}

.stats-list {
  padding: 0;
}

.stats-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
}

.stats-item:active {
  background-color: #fafafa;
}

.stats-item-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.stats-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stats-icon-blue {
  background-color: #dbeafe;
}

.stats-icon-green {
  background-color: #d1fae5;
}

.stats-item-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #4b5563;
}

.stats-item-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.stats-item-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.stats-divider {
  height: 1rpx;
  background-color: #f3f4f6;
  margin-left: 116rpx;
}

/* ==================== 底部间距 ==================== */

.bottom-space {
  height: 40rpx;
}
