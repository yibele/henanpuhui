/**
 * 结算详情页面样式
 */

.detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 60rpx;
}

/* ==================== 状态卡片 ==================== */

.status-card {
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.status-card-orange {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
}

.status-card-blue {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

.status-card-green {
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.status-badge {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #ffffff;
}

.status-badge-orange {
  background-color: rgba(255, 255, 255, 0.25);
}

.status-badge-blue {
  background-color: rgba(255, 255, 255, 0.25);
}

.status-badge-green {
  background-color: rgba(255, 255, 255, 0.25);
}

.status-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.status-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ==================== 区块样式 ==================== */

.section {
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.section-header .section-title {
  margin-bottom: 0;
}

.section-action {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 26rpx;
  color: #059669;
}

.section-badge {
  font-size: 24rpx;
  color: #6b7280;
  background-color: #f3f4f6;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}

/* ==================== 信息卡片 ==================== */

.info-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #6b7280;
}

.info-value {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
}

/* ==================== 金额计算卡片 ==================== */

.calc-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.calc-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.calc-row-main {
  padding: 16rpx 0;
}

.calc-row-main .calc-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.calc-row-sub {
  padding: 8rpx 0 8rpx 24rpx;
}

.calc-row-sub .calc-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.calc-row-sub .calc-value {
  font-size: 24rpx;
}

.calc-row-total {
  padding: 12rpx 0 12rpx 24rpx;
  border-top: 1rpx dashed #e5e7eb;
  margin-top: 8rpx;
}

.calc-group {
  background-color: #fafafa;
  border-radius: 12rpx;
  padding: 16rpx;
  margin: 12rpx 0;
}

.calc-group-title {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.calc-divider {
  height: 1rpx;
  background-color: #e5e7eb;
  margin: 16rpx 0;
}

.calc-row-result {
  padding: 16rpx 0;
}

.calc-row-result .calc-value {
  font-size: 32rpx;
  font-weight: 600;
}

.calc-row-adjust {
  background-color: #fef3c7;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-top: 12rpx;
}

.calc-row-final {
  background-color: #d1fae5;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 12rpx;
}

.calc-row-final .calc-label {
  font-weight: 600;
}

.calc-row-final .calc-value {
  font-size: 40rpx;
  font-weight: 700;
}

.calc-label {
  font-size: 26rpx;
  color: #6b7280;
}

.calc-value {
  font-size: 28rpx;
  color: #1f2937;
}

.calc-value-red {
  color: #ef4444;
}

.calc-value-green {
  color: #059669;
}

/* 调整金额输入 */
.adjust-input-wrap {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border: 2rpx solid #f59e0b;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
}

.adjust-prefix {
  font-size: 28rpx;
  color: #f59e0b;
  font-weight: 600;
}

.adjust-input {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #f59e0b;
  text-align: right;
}

/* ==================== 预付款卡片 ==================== */

.prepay-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.prepay-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f3f4f6;
  margin-bottom: 16rpx;
}

.prepay-total-label {
  font-size: 26rpx;
  color: #6b7280;
}

.prepay-total-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #8b5cf6;
}

.prepay-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.prepay-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background-color: #faf5ff;
  border-radius: 8rpx;
}

.prepay-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.prepay-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #8b5cf6;
}

.prepay-remark {
  font-size: 24rpx;
  color: #6b7280;
}

.prepay-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  font-size: 22rpx;
  color: #9ca3af;
}

/* ==================== 审核卡片 ==================== */

.audit-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.audit-tip {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 16rpx;
  background-color: #fef3c7;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.audit-tip text {
  font-size: 24rpx;
  color: #92400e;
  line-height: 1.5;
}

.audit-form {
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 16rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #374151;
  margin-bottom: 8rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 26rpx;
  background-color: #f9fafb;
  box-sizing: border-box;
}

.audit-actions {
  padding-top: 8rpx;
}

/* ==================== 支付进度卡片 ==================== */

.payment-progress-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-label {
  font-size: 26rpx;
  color: #6b7280;
}

.progress-percent {
  font-size: 32rpx;
  font-weight: 700;
  color: #059669;
}

.progress-bar-wrap {
  height: 16rpx;
  background-color: #e5e7eb;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #059669 0%, #10b981 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-amounts {
  display: flex;
  justify-content: space-between;
}

.progress-amount {
  display: flex;
  flex-direction: column;
}

.amount-label {
  font-size: 22rpx;
  color: #9ca3af;
}

.amount-value {
  font-size: 28rpx;
  font-weight: 600;
}

.amount-value-green {
  color: #059669;
}

.amount-value-orange {
  color: #f97316;
}

/* ==================== 支付列表 ==================== */

.payment-list {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
}

.payment-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.payment-item:last-child {
  border-bottom: none;
}

.payment-index {
  width: 48rpx;
  height: 48rpx;
  background-color: #059669;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
  flex-shrink: 0;
}

.payment-content {
  flex: 1;
}

.payment-main {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 4rpx;
}

.payment-amount {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
}

.payment-method {
  font-size: 22rpx;
  color: #6b7280;
  background-color: #f3f4f6;
  padding: 2rpx 12rpx;
  border-radius: 6rpx;
}

.payment-sub {
  display: flex;
  gap: 16rpx;
  font-size: 22rpx;
  color: #9ca3af;
}

/* ==================== 添加支付按钮 ==================== */

.add-payment-btn {
  margin-top: 16rpx;
}

/* ==================== 备注卡片 ==================== */

.remark-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 26rpx;
  color: #374151;
  line-height: 1.6;
}

/* ==================== 空提示 ==================== */

.empty-tip {
  text-align: center;
  padding: 32rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #9ca3af;
}

/* ==================== 弹窗表单 ==================== */

.dialog-form {
  padding: 24rpx;
}

.dialog-tip {
  text-align: center;
  padding: 16rpx;
  background-color: #f0fdf4;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #059669;
  font-weight: 500;
}

.dialog-form-item {
  margin-bottom: 20rpx;
}

.dialog-label {
  display: block;
  font-size: 26rpx;
  color: #374151;
  margin-bottom: 8rpx;
}

.dialog-input {
  width: 100%;
  padding: 16rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* ==================== 底部间距 ==================== */

.bottom-space {
  height: 40rpx;
}

