/**
 * 结算管理页面样式（管理层视图）
 */

.finance-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 180rpx;
}

/* ==================== 汇总统计卡片 ==================== */

.overview-card {
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  color: #ffffff;
}

.overview-title {
  font-size: 28rpx;
  font-weight: 500;
  opacity: 0.9;
  margin-bottom: 24rpx;
}

.overview-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.overview-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-value-blue {
  color: #bfdbfe;
}

.stat-value-green {
  color: #a7f3d0;
}

.stat-value-orange {
  color: #fed7aa;
}

.stat-value-purple {
  color: #ddd6fe;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 农户统计 */
.farmer-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.farmer-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.farmer-count {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
}

.farmer-count-orange {
  color: #fed7aa;
}

.farmer-count-purple {
  color: #ddd6fe;
}

.farmer-label {
  font-size: 22rpx;
  opacity: 0.8;
  margin-top: 4rpx;
}

.farmer-stat-divider {
  width: 1rpx;
  height: 48rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

/* ==================== 搜索栏 ==================== */

.search-bar {
  margin-bottom: 20rpx;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
}

.search-input::placeholder {
  color: #9ca3af;
}

/* ==================== Tab切换 ==================== */

.tab-bar {
  display: flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
  flex-shrink: 0;
}

.tab-item.active {
  background-color: #059669;
}

.tab-item.active .tab-text {
  color: #ffffff;
}

.tab-text {
  font-size: 26rpx;
  color: #6b7280;
}

.tab-badge {
  margin-left: 8rpx;
  min-width: 36rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: 500;
  color: #ffffff;
  background-color: #9ca3af;
  border-radius: 16rpx;
  padding: 0 8rpx;
}

.tab-item.active .tab-badge {
  background-color: rgba(255, 255, 255, 0.3);
}

.tab-badge-orange {
  background-color: #f97316 !important;
}

.tab-badge-blue {
  background-color: #3b82f6 !important;
}

.tab-badge-purple {
  background-color: #8b5cf6 !important;
}

.tab-badge-green {
  background-color: #059669 !important;
}

/* ==================== 结算列表 ==================== */

.settlement-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.settlement-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.status-indicator {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
}

.status-indicator-orange {
  background-color: #f97316;
}

.status-indicator-blue {
  background-color: #3b82f6;
}

.status-indicator-purple {
  background-color: #8b5cf6;
}

.status-indicator-green {
  background-color: #059669;
}

.status-indicator-gray {
  background-color: #9ca3af;
}

.card-content {
  padding: 24rpx;
  padding-left: 32rpx;
}

/* 头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.farmer-info {
  display: flex;
  flex-direction: column;
}

.farmer-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.farmer-phone {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}

.status-badge {
  font-size: 22rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.status-badge-orange {
  background-color: #ffedd5;
  color: #ea580c;
}

.status-badge-blue {
  background-color: #dbeafe;
  color: #2563eb;
}

.status-badge-purple {
  background-color: #ede9fe;
  color: #7c3aed;
}

.status-badge-green {
  background-color: #d1fae5;
  color: #059669;
}

.status-badge-gray {
  background-color: #f3f4f6;
  color: #6b7280;
}

/* 金额信息 */
.amount-grid {
  display: flex;
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.amount-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.amount-label {
  font-size: 22rpx;
  color: #9ca3af;
  margin-bottom: 4rpx;
}

.amount-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.amount-value-green {
  color: #059669;
}

.amount-value-orange {
  color: #f97316;
}

/* 支付进度 */
.payment-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.progress-bar-wrap {
  flex: 1;
  height: 12rpx;
  background-color: #e5e7eb;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #059669 0%, #10b981 100%);
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #059669;
  min-width: 60rpx;
  text-align: right;
}

/* 扣款明细 */
.deduction-info {
  padding: 12rpx 16rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.deduction-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6rpx 0;
}

.deduction-label {
  font-size: 24rpx;
  color: #6b7280;
}

.deduction-value {
  font-size: 24rpx;
  color: #1f2937;
}

.deduction-value-red {
  color: #ef4444;
}

/* 底部信息 */
.card-footer {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f3f4f6;
}

.date {
  font-size: 24rpx;
  color: #9ca3af;
}

.payment-count,
.audit-info {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 空状态 ==================== */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
  margin-top: 24rpx;
}

/* ==================== 底部间距 ==================== */

.bottom-space {
  height: 40rpx;
}
