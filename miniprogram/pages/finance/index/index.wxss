/**
 * 财务结算页面样式
 */

.finance-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 160rpx;
}

/* ==================== 统计卡片 ==================== */

.stats-banner {
  display: flex;
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 32rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stat-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stat-icon-orange {
  background-color: #ffedd5;
}

.stat-icon-green {
  background-color: #d1fae5;
}

.stat-content {
  display: flex;
  flex-direction: column;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
}

.stat-value-orange {
  color: #f97316;
}

.stat-value-green {
  color: #059669;
}

.stat-divider {
  width: 1rpx;
  background-color: #e5e7eb;
  margin: 0 24rpx;
}

/* ==================== 区块标题 ==================== */

.section {
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
}

.section-subtitle {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 结算列表 ==================== */

.settlement-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.settlement-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
  position: relative;
}

.status-indicator {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
}

.status-indicator-paid {
  background-color: #059669;
}

.status-indicator-unpaid {
  background-color: #f97316;
}

.settlement-content {
  padding: 24rpx;
  padding-left: 32rpx;
}

/* 头部信息 */
.settlement-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.farmer-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.farmer-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.status-badge {
  font-size: 22rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.status-badge-paid {
  background-color: #d1fae5;
  color: #059669;
}

.status-badge-unpaid {
  background-color: #ffedd5;
  color: #ea580c;
}

.settlement-date {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 金额信息 */
.amount-info {
  background-color: #f9fafb;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
}

.amount-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.amount-row-final {
  border-top: 1rpx dashed #e5e7eb;
  margin-top: 8rpx;
  padding-top: 16rpx;
}

.amount-label {
  font-size: 26rpx;
  color: #6b7280;
}

.amount-value {
  font-size: 28rpx;
  color: #1f2937;
}

.amount-deduction {
  color: #ef4444;
}

.amount-final {
  font-size: 32rpx;
  font-weight: 700;
  color: #059669;
}

/* 支付信息 */
.payment-info {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f4f6;
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 空状态 ==================== */

.empty-state {
  padding: 100rpx 0;
}

/* ==================== 底部间距 ==================== */

.bottom-space {
  height: 40rpx;
}

