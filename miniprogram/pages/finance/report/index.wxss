/**
 * 结算报表页面样式
 */

.report-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* ==================== 汇总卡片 ==================== */

.summary-card {
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
  padding: 32rpx;
  color: #ffffff;
}

.summary-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.summary-title {
  font-size: 28rpx;
  font-weight: 500;
  opacity: 0.9;
}

.summary-count {
  font-size: 24rpx;
  opacity: 0.8;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.summary-main {
  text-align: center;
  padding: 24rpx 0;
  margin-bottom: 20rpx;
}

.main-amount-label {
  font-size: 24rpx;
  opacity: 0.8;
  display: block;
  margin-bottom: 8rpx;
}

.main-amount-value {
  font-size: 56rpx;
  font-weight: 700;
}

.summary-row {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-item-label {
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 6rpx;
}

.summary-item-value {
  font-size: 28rpx;
  font-weight: 600;
}

.summary-item-red {
  color: #fecaca;
}

/* ==================== 日期筛选 ==================== */

.filter-bar {
  display: flex;
  background-color: #ffffff;
  padding: 16rpx 24rpx;
  gap: 16rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 12rpx;
  background-color: #f3f4f6;
  font-size: 26rpx;
  color: #6b7280;
  transition: all 0.3s;
}

.filter-item.active {
  background-color: #059669;
  color: #ffffff;
  font-weight: 500;
}

/* ==================== 列表区域 ==================== */

.list-section {
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.section-count {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 结算列表 ==================== */

.settlement-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.settlement-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  padding: 24rpx;
  border-radius: 16rpx;
}

.item-left {
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
}

.item-time {
  font-size: 24rpx;
  color: #9ca3af;
}

.item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.item-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #059669;
  margin-bottom: 6rpx;
}

.item-detail {
  font-size: 22rpx;
  color: #9ca3af;
}

/* ==================== 空状态 ==================== */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
  margin-top: 20rpx;
}

/* ==================== 加载状态 ==================== */

.loading-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 0;
}

.load-complete {
  text-align: center;
  padding: 24rpx 0;
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 底部间距 ==================== */

.bottom-space {
  height: 40rpx;
}
