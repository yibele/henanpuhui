/**
 * 种苗发放管理页样式
 */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* ==================== 顶部统计卡片 ==================== */

.stats-header {
  background: linear-gradient(135deg, #059669, #047857);
  padding: 32rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(5, 150, 105, 0.2);
}

.stats-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #ffffff;
}

.add-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.stats-grid {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-value {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.stats-value.highlight {
  color: #fcd34d;
}

.stats-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.stats-divider {
  width: 1rpx;
  height: 48rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.stats-row-secondary {
  display: flex;
  gap: 24rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.stats-item-small {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats-label-small {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.stats-value-small {
  font-size: 26rpx;
  font-weight: 600;
  color: #ffffff;
}

/* ==================== Tab 切换 ==================== */

.tab-bar {
  display: flex;
  background-color: #ffffff;
  margin: 0 24rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 16rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #6b7280;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.tab-item.active {
  background-color: #059669;
  color: #ffffff;
  font-weight: 600;
}

/* ==================== 搜索栏 ==================== */

.search-bar {
  padding: 0 24rpx 16rpx;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  gap: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
}

.search-input::placeholder {
  color: #9ca3af;
}

.search-clear {
  padding: 4rpx;
}

/* ==================== 加载状态 ==================== */

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #9ca3af;
  font-size: 26rpx;
  gap: 16rpx;
}

/* ==================== 记录列表 ==================== */

.record-list {
  padding: 0 24rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.list-count {
  font-size: 24rpx;
  font-weight: 400;
  color: #9ca3af;
}

.record-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.record-item:active {
  background-color: #fafafa;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.record-farmer {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.farmer-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.farmer-phone {
  font-size: 24rpx;
  color: #9ca3af;
}

.record-amount {
  text-align: right;
}

.amount-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #059669;
}

.record-body {
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.info-row:not(:last-child) {
  border-bottom: 1rpx solid #f3f4f6;
}

.info-label {
  font-size: 24rpx;
  color: #6b7280;
}

.info-value {
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-date {
  font-size: 24rpx;
  color: #9ca3af;
}

.record-manager {
  font-size: 24rpx;
  color: #6b7280;
}

/* ==================== 加载更多 ==================== */

.load-more {
  text-align: center;
  padding: 24rpx;
  font-size: 26rpx;
  color: #6b7280;
}

.load-more:active {
  color: #059669;
}

/* ==================== 空状态 ==================== */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  gap: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}

.empty-btn {
  margin-top: 24rpx;
  background-color: #059669;
  color: #ffffff;
  padding: 16rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.empty-btn:active {
  background-color: #047857;
}

/* ==================== 底部安全区 ==================== */

.safe-bottom {
  height: 40rpx;
}
