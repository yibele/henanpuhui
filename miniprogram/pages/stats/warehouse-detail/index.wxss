/* 仓库收购明细页面样式 */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.page-header {
  padding: 32rpx 24rpx 24rpx;
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

/* Tab切换 */
.tab-bar {
  display: flex;
  background: #ffffff;
  border-bottom: 1rpx solid #f3f4f6;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #6b7280;
  position: relative;
}

.tab-item.active {
  color: #059669;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: #059669;
  border-radius: 3rpx;
}

/* 汇总信息 */
.summary-bar {
  display: flex;
  background: #ffffff;
  padding: 20rpx;
  margin: 16rpx;
  border-radius: 12rpx;
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-num {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

.summary-num.highlight {
  color: #f59e0b;
}

.summary-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-left: 4rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 0 16rpx 16rpx;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background: #ffffff;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  margin-left: 12rpx;
}

.search-clear {
  padding: 8rpx;
}

.search-btn {
  padding: 16rpx 24rpx;
  margin-left: 12rpx;
  background: #059669;
  border-radius: 12rpx;
  color: #ffffff;
  font-size: 28rpx;
}

/* 记录列表 */
.record-list {
  padding: 0 16rpx 100rpx;
}

.record-item {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
}

/* 记录头部：农户名 + 日期 */
.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.farmer-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.record-date {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 记录主体：固定布局 */
.record-body {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-top: 1rpx solid #f3f4f6;
  border-bottom: 1rpx solid #f3f4f6;
}

.record-detail {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.record-detail.weight {
  width: 180rpx;
}

.record-detail.price {
  width: 150rpx;
}

.record-detail.amount {
  flex: 1;
  align-items: flex-end;
}

.detail-label {
  font-size: 22rpx;
  color: #9ca3af;
  margin-bottom: 4rpx;
}

.detail-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
}

.detail-value.highlight {
  color: #f59e0b;
  font-size: 32rpx;
}

/* 记录底部：手机号 + 操作人 */
.record-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
}

.farmer-phone {
  font-size: 24rpx;
  color: #6b7280;
}

.record-operator {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx;
  color: #6b7280;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
  margin-top: 16rpx;
}
