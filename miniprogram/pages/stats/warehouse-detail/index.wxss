/**
 * 仓库详情页面样式
 */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 80rpx;
  box-sizing: border-box;
}

/* 仓库概览卡片 */
.warehouse-overview {
  background: linear-gradient(135deg, #059669 0%, #10b981 100%);
  padding: 32rpx 24rpx;
  color: #ffffff;
}

.overview-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.warehouse-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.warehouse-info {
  flex: 1;
}

.warehouse-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.warehouse-name {
  font-size: 36rpx;
  font-weight: 700;
}

.warehouse-type-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 8rpx;
  color: #ffffff;
}

.warehouse-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
  display: block;
}

/* 容量使用情况 */
.capacity-section {
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.capacity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.capacity-title {
  font-size: 26rpx;
  font-weight: 500;
}

.capacity-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.capacity-status.status-normal {
  background-color: rgba(167, 243, 208, 0.3);
  color: #a7f3d0;
}

.capacity-status.status-warning {
  background-color: rgba(254, 240, 138, 0.3);
  color: #fef08a;
}

.capacity-status.status-full {
  background-color: rgba(254, 202, 202, 0.3);
  color: #fecaca;
}

.capacity-progress-wrap {
  height: 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.capacity-progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #a7f3d0 0%, #fef08a 70%, #fecaca 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.capacity-detail {
  display: flex;
  justify-content: space-between;
}

.capacity-item {
  text-align: center;
}

.capacity-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  display: block;
}

.capacity-value {
  font-size: 24rpx;
  font-weight: 600;
  margin-top: 4rpx;
  display: block;
}

.capacity-value.available {
  color: #a7f3d0;
}

.capacity-value.warning {
  color: #fef08a;
}

.capacity-value.danger {
  color: #fecaca;
}

/* 概览统计 */
.overview-stats {
  display: flex;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  display: block;
}

.stat-value.highlight {
  color: #fef08a;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
  display: block;
}

.stat-divider {
  width: 1rpx;
  background-color: rgba(255, 255, 255, 0.2);
  margin: 0 8rpx;
}

/* Tab 切换 */
.tab-bar {
  display: flex;
  background-color: #ffffff;
  padding: 8rpx;
  margin: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #6b7280;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background-color: #059669;
  color: #ffffff;
  font-weight: 500;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  gap: 16rpx;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  margin-left: 12rpx;
  color: #374151;
}

.search-input::placeholder {
  color: #9ca3af;
}

.search-clear {
  padding: 4rpx;
}

.search-btn {
  background-color: #059669;
  color: #ffffff;
  padding: 16rpx 28rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* 区块标题 */
.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
  padding: 0 24rpx;
  margin-bottom: 16rpx;
}

.record-count {
  font-size: 24rpx;
  font-weight: 400;
  color: #9ca3af;
}

/* 收苗记录列表 */
.record-list {
  padding: 0 24rpx;
}

.record-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.farmer-info {
  display: flex;
  flex-direction: column;
}

.farmer-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.farmer-phone {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}

.record-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.record-status.status-paid {
  background-color: #d1fae5;
  color: #059669;
}

.record-status.status-unpaid {
  background-color: #fef3c7;
  color: #d97706;
}

.record-status.status-partial {
  background-color: #dbeafe;
  color: #2563eb;
}

/* 记录内容 */
.record-body {
  border-top: 1rpx solid #f3f4f6;
  border-bottom: 1rpx solid #f3f4f6;
  padding: 16rpx 0;
  margin-bottom: 16rpx;
}

.record-detail {
  display: flex;
  justify-content: space-between;
}

.detail-row {
  text-align: center;
}

.detail-label {
  font-size: 22rpx;
  color: #9ca3af;
  display: block;
}

.detail-value {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
  margin-top: 4rpx;
  display: block;
}

.detail-value.amount {
  color: #059669;
  font-weight: 600;
}

/* 记录底部 */
.record-footer {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #9ca3af;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 32rpx;
  color: #6b7280;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
  margin-top: 16rpx;
}

/* 底部安全区 */
.safe-bottom {
  height: 32rpx;
}

