/* 仓库日报页面样式 */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 页面标题 */
.page-header {
  padding: 32rpx 24rpx;
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
}

.header-stats {
  display: flex;
  gap: 48rpx;
  margin-top: 20rpx;
}

.header-stats .stat-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.header-stats .stat-num {
  font-size: 36rpx;
  font-weight: 700;
  color: #fcd34d;
}

.header-stats .stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 日期列表 */
.daily-list {
  padding: 16rpx;
}

.daily-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

/* 日期头部 */
.daily-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.daily-date {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.edit-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: #f0fdf4;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #059669;
}

/* 日期数据 */
.daily-body {
  display: flex;
}

.data-col {
  flex: 1;
  text-align: center;
}

.data-label {
  display: block;
  font-size: 22rpx;
  color: #9ca3af;
  margin-bottom: 8rpx;
}

.data-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.data-value.empty {
  color: #d1d5db;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 24rpx;
  color: #6b7280;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 加载中 */
.loading-wrap {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

/* ==================== 编辑弹窗 ==================== */

.edit-popup {
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.popup-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.popup-close {
  padding: 8rpx;
}

/* 编辑行 */
.edit-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.edit-label {
  font-size: 28rpx;
  color: #374151;
  width: 160rpx;
}

.edit-value {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #111827;
}

.edit-value.readonly {
  color: #9ca3af;
}

.edit-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.edit-input {
  width: 200rpx;
  text-align: right;
  font-size: 32rpx;
  font-weight: 500;
  color: #111827;
  padding: 8rpx;
  background: #f9fafb;
  border-radius: 8rpx;
}

.edit-unit {
  font-size: 26rpx;
  color: #6b7280;
  margin-left: 8rpx;
  width: 50rpx;
}

/* 提交按钮 */
.popup-footer {
  margin-top: 32rpx;
}
