/* 仓库管理页面样式 - 简洁版 */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* ==================== 我的仓库 ==================== */

.my-warehouse-card {
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  color: #ffffff;
}

.my-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.my-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.my-name {
  font-size: 36rpx;
  font-weight: 700;
}

.my-tag {
  background: rgba(255, 255, 255, 0.2);
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.my-date {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 今日数据 */
.my-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stat-block {
  text-align: center;
}

.stat-num {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  opacity: 0.8;
  margin-top: 4rpx;
}

/* 库存信息 */
.my-stock {
  display: flex;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.stock-block {
  flex: 1;
  text-align: center;
}

.stock-num {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
}

.stock-num.highlight {
  color: #fcd34d;
}

.stock-label {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 4rpx;
}

/* 操作按钮 */
.my-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.2);
}

.action-btn.primary {
  background: #ffffff;
}

.action-btn .action-text {
  font-size: 28rpx;
  font-weight: 500;
}

.action-btn.primary .action-text {
  color: #059669;
}

/* 查看详情入口 */
.detail-entry {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
}

.detail-text {
  font-size: 26rpx;
  opacity: 0.9;
}

/* ==================== 其他仓库 ==================== */

.other-section {
  margin-top: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.other-list {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.other-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.other-item:last-child {
  border-bottom: none;
}

.other-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #374151;
}

.other-data {
  display: flex;
  gap: 24rpx;
}

.other-stock {
  font-size: 28rpx;
  font-weight: 600;
  color: #f59e0b;
}

.other-count {
  font-size: 26rpx;
  color: #6b7280;
}

/* ==================== 加载和空状态 ==================== */

.loading-wrap {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* ==================== 弹窗 ==================== */

.popup-box {
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.popup-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
  text-align: center;
  margin-bottom: 32rpx;
}

.popup-input-row {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.popup-label {
  width: 100rpx;
  font-size: 28rpx;
  color: #374151;
}

.popup-input {
  flex: 1;
  font-size: 32rpx;
  color: #111827;
  text-align: right;
}

.popup-unit {
  font-size: 28rpx;
  color: #6b7280;
  margin-left: 12rpx;
  width: 60rpx;
}

.popup-btn-row {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
}

.popup-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.popup-btn.cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.popup-btn.confirm {
  background: #059669;
  color: #ffffff;
}
